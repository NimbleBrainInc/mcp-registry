      "transport": {
        "type": "streamable-http",
        "url": "https://mcp.nimbletools.ai/mcp"
      },
      "environmentVariables": [
        {
          "name": "FOLK_API_KEY",
          "description": "Folk API key (get from https://app.folk.app/settings/api)",
          "isRequired": true,
          "isSecret": true,
          "placeholder": "your_folk_api_key_here"
        }
      ]
    }
  ],
  "_meta": {
    "ai.nimbletools.mcp/v1": {
      "runtime": "python:3.13",
      "status": "active",
      "repository": {
        "branch": "main"
      },
      "container": {
        "healthCheck": {
          "path": "/health",
          "port": 8000,
          "initialDelaySeconds": 10
