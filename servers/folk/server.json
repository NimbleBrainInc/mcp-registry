      "transport": {
        "type": "streamable-http",
        "url": "https://mcp.nimbletools.ai/mcp"
      },
      "environmentVariables": [
        {
          "name": "FOLK_API_KEY",
          "description": "Folk API key (get from https://app.folk.app/settings/api)",
          "isRequired": true,
          "isSecret": true,
          "placeholder": "your_folk_api_key_here"
        }
      ]
    },
    {
      "registryType": "mcpb",
      "identifier": "https://github.com/NimbleBrainInc/mcp-folk/releases/download/v0.1.5/nimblebraininc-folk-0.1.5-linux-arm64.mcpb",
