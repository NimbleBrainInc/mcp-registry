{
  "$schema": "https://registry.nimbletools.ai/schemas/2025-12-11/nimbletools-server.schema.json",
  "name": "ai.nimbletools/folk",
  "version": "0.1.5",
  "title": "Folk",
  "description": "Folk CRM: manage contacts, companies, notes, reminders, and interactions",
  "icons": [
    {
      "src": "https://static.nimbletools.ai/icons/folk.png",
      "sizes": [
        "64x64"
