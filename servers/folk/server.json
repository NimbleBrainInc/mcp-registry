        "limits": {
          "cpu": "1000m",
          "memory": "512Mi"
        }
      },
      "deployment": {
        "protocol": "http",
        "port": 8000,
        "mcpPath": "/mcp"
      },
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "display": {
        "category": "communication-collaboration",
        "tags": [
          "folk",
          "crm",
          "contacts",
          "companies",
          "notes",
          "reminders",
          "interactions",
          "requires-api-key"
        ],
        "documentation": {
          "readmeUrl": "https://raw.githubusercontent.com/NimbleBrainInc/mcp-folk/main/README.md"
