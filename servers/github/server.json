{
  "$schema": "https://registry.nimbletools.ai/schemas/2025-12-11/nimbletools-server.schema.json",
  "name": "ai.nimbletools/github",
  "version": "0.26.3-mcpb.1",
  "title": "GitHub",
  "description": "Interact with GitHub repos, issues, PRs, code search, and Actions through natural language",
  "icons": [
    {
      "src": "https://static.nimbletools.ai/icons/github.png",
      "sizes": [
        "64x64"
      ]
    },
    {
      "src": "https://static.nimbletools.ai/logos/github.png",
      "sizes": [
        "256x256"
      ]
    }
  ],
  "repository": {
    "url": "https://github.com/NimbleBrainInc/github-mcp-server",
    "source": "github"
  },
  "websiteUrl": "https://github.com/",
  "packages": [
    {
      "registryType": "mcpb",
      "identifier": "https://github.com/NimbleBrainInc/github-mcp-server/releases/download/v0.26.3-mcpb.1/mcp-github-v0.26.3-mcpb.1-linux-amd64.mcpb",
      "version": "0.26.3-mcpb.1",
      "fileSha256": "90d6efe8ffc073d280324e281670bc94df763dbfc6a6abf33bb11cd7e2fd0814",
      "transport": {
        "type": "streamable-http",
        "url": "http://localhost:8000/mcp"
      },
      "environmentVariables": [
        {
          "name": "GITHUB_PERSONAL_ACCESS_TOKEN",
          "description": "GitHub Personal Access Token with repo, issues, and actions permissions (get one at github.com/settings/tokens)",
          "isRequired": true,
          "isSecret": true,
          "placeholder": "ghp_xxxxxxxxxxxxxxxxxxxx"
        },
        {
          "name": "GITHUB_TOOLSETS",
          "description": "Comma-separated toolsets: repos, issues, pull_requests, actions, code_security, or 'all' for everything",
          "isRequired": false,
          "isSecret": false,
          "placeholder": "all"
        }
      ]
    },
    {
      "registryType": "mcpb",
      "identifier": "https://github.com/NimbleBrainInc/github-mcp-server/releases/download/v0.26.3-mcpb.1/mcp-github-v0.26.3-mcpb.1-linux-arm64.mcpb",
      "version": "0.26.3-mcpb.1",
      "fileSha256": "0d5e3f4782118cc547b1c27dd7788d6174314d7182d65c2bfcee6339a8f04371",
      "transport": {
        "type": "streamable-http",
        "url": "http://localhost:8000/mcp"
      },
      "environmentVariables": [
        {
          "name": "GITHUB_PERSONAL_ACCESS_TOKEN",
          "description": "GitHub Personal Access Token with repo, issues, and actions permissions (get one at github.com/settings/tokens)",
          "isRequired": true,
          "isSecret": true,
          "placeholder": "ghp_xxxxxxxxxxxxxxxxxxxx"
        },
        {
          "name": "GITHUB_TOOLSETS",
          "description": "Comma-separated toolsets: repos, issues, pull_requests, actions, code_security, or 'all' for everything",
          "isRequired": false,
          "isSecret": false,
          "placeholder": "all"
        }
      ]
    }
  ],
  "_meta": {
    "ai.nimbletools.mcp/v1": {
      "runtime": "binary",
      "status": "active",
      "repository": {
        "branch": "main"
      },
      "container": {
        "healthCheck": {
          "path": "/health",
          "port": 8000
        }
      },
      "resources": {
        "limits": {
          "memory": "512Mi",
          "cpu": "200m"
        },
        "requests": {
          "memory": "256Mi",
          "cpu": "100m"
        }
      },
      "deployment": {
        "protocol": "http",
        "port": 8000,
        "mcpPath": "/mcp"
      },
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "display": {
        "category": "developer-tools",
        "tags": [
          "version-control",
          "git",
          "devops",
          "ci-cd",
          "code-review",
          "collaboration",
          "enterprise",
          "requires-api-key"
        ],
        "documentation": {
          "readmeUrl": "https://raw.githubusercontent.com/github/github-mcp-server/main/README.md"
        }
      }
    }
  }
}
