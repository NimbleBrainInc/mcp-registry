{
  "$schema": "https://registry.nimbletools.ai/schemas/2025-12-11/nimbletools-server.schema.json",
  "name": "ai.nimbletools/clickhouse",
  "version": "1.0.0",
  "title": "ClickHouse",
  "description": "OLAP database for real-time analytics and data warehousing queries",
  "icons": [
    {
      "src": "https://static.nimbletools.ai/icons/clickhouse.png",
      "sizes": [
        "64x64"
      ]
    },
    {
      "src": "https://static.nimbletools.ai/logos/clickhouse.png",
      "sizes": [
        "256x256"
      ]
    }
  ],
  "repository": {
    "url": "https://github.com/ClickHouse/mcp-clickhouse",
    "source": "github"
  },
  "websiteUrl": "https://clickhouse.com",
  "packages": [
    {
      "registryType": "oci",
      "registryBaseUrl": "https://docker.io",
      "identifier": "nimbletools/mcp-clickhouse",
      "version": "1.0.0",
      "transport": {
        "type": "streamable-http",
        "url": "https://mcp.nimbletools.ai/mcp"
      },
      "environmentVariables": [
        {
          "name": "CLICKHOUSE_HOST",
          "description": "ClickHouse server hostname",
          "isRequired": false,
          "isSecret": false,
          "default": "0.0.0.0",
          "placeholder": "127.0.0.1"
        },
        {
          "name": "CLICKHOUSE_USER",
          "description": "ClickHouse username for authentication",
          "isRequired": true,
          "isSecret": false,
          "placeholder": "default"
        },
        {
          "name": "CLICKHOUSE_PASSWORD",
          "description": "ClickHouse password for authentication",
          "isRequired": true,
          "isSecret": true,
          "placeholder": "your_password_here"
        },
        {
          "name": "CLICKHOUSE_PORT",
          "description": "ClickHouse server port (default: 8443 for HTTPS, 8123 for HTTP)",
          "isRequired": false,
          "isSecret": false,
          "placeholder": "8443"
        },
        {
          "name": "CLICKHOUSE_DATABASE",
          "description": "Default database to connect to",
          "isRequired": false,
          "isSecret": false,
          "placeholder": "default"
        },
        {
          "name": "CLICKHOUSE_MCP_BIND_HOST",
          "description": "The MCP transport",
          "default": "0.0.0.0",
          "isRequired": false,
          "isSecret": false,
          "placeholder": "127.0.0.1"
        },
        {
          "name": "CLICKHOUSE_MCP_SERVER_TRANSPORT",
          "description": "The MCP transport",
          "default": "http",
          "isRequired": false,
          "isSecret": false,
          "placeholder": "http"
        }
      ]
    }
  ],
  "_meta": {
    "ai.nimbletools.mcp/v1": {
      "status": "active",
      "repository": {
        "branch": "main"
      },
      "container": {
        "healthCheck": {
          "enabled": false
        }
      },
      "resources": {
        "limits": {
          "memory": "512Mi",
          "cpu": "200m"
        },
        "requests": {
          "memory": "256Mi",
          "cpu": "100m"
        }
      },
      "deployment": {
        "protocol": "http",
        "port": 8000,
        "mcpPath": "/mcp"
      },
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "display": {
        "category": "infrastructure-data",
        "tags": [
          "database",
          "analytics",
          "olap",
          "data-warehouse",
          "sql",
          "real-time",
          "enterprise",
          "requires-api-key"
        ],
        "documentation": {
          "readmeUrl": "https://raw.githubusercontent.com/ClickHouse/mcp-clickhouse/main/README.md"
        }
      }
    }
  }
}
