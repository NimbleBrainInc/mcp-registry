  "_meta": {
    "ai.nimbletools.mcp/v1": {
      "runtime": "python:3.14",
      "status": "active",
      "repository": {
        "branch": "main"
      },
      "container": {
        "healthCheck": {
          "path": "/health",
          "port": 8000
        }
      },
      "resources": {
        "limits": {
          "memory": "256Mi",
          "cpu": "100m"
