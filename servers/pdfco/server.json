      "transport": {
        "type": "streamable-http",
        "url": "https://mcp.nimbletools.ai/mcp"
      },
      "environmentVariables": [
        {
          "name": "PDFCO_API_KEY",
          "description": "PDF.co API key (get from https://app.pdf.co/dashboard)",
          "isRequired": true,
          "isSecret": true,
          "placeholder": "your_pdfco_api_key_here"
        }
      ]
    }
