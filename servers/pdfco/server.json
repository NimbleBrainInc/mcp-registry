          "cpu": "50m"
        }
      },
      "deployment": {
        "protocol": "http",
        "port": 8000,
        "mcpPath": "/mcp"
      },
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "display": {
        "category": "developer-tools",
        "tags": [
          "pdf",
          "documents",
          "ocr",
          "conversion",
          "automation",
          "text-extraction",
          "barcode",
          "watermark",
          "merge",
          "requires-api-key"
        ],
        "documentation": {
