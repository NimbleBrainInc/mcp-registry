{
  "$schema": "https://registry.nimbletools.ai/schemas/2025-12-11/nimbletools-server.schema.json",
  "name": "ai.nimbletools/finnhub",
  "version": "1.0.0",
  "title": "Finnhub",
  "description": "Financial market data API with real-time quotes, company profiles, and news",
  "icons": [
    {
      "src": "https://static.nimbletools.ai/icons/finnhub.png",
      "sizes": [
        "64x64"
      ]
    },
    {
      "src": "https://static.nimbletools.ai/logos/finnhub.png",
      "sizes": [
        "256x256"
      ]
    }
  ],
  "repository": {
    "url": "https://github.com/NimbleBrainInc/mcp-finnhub",
    "source": "github"
  },
  "websiteUrl": "https://finnhub.io/",
  "packages": [
    {
      "registryType": "oci",
      "registryBaseUrl": "https://docker.io",
      "identifier": "nimbletools/mcp-finnhub",
      "version": "1.0.0",
      "transport": {
        "type": "streamable-http",
        "url": "https://mcp.nimbletools.ai/mcp"
      },
      "environmentVariables": [
        {
          "name": "FINNHUB_API_KEY",
          "description": "Finnhub API key for accessing financial data (get free key at finnhub.io)",
          "isRequired": true,
          "isSecret": true,
          "placeholder": "your_finnhub_api_key_here"
        }
      ]
    }
  ],
  "_meta": {
    "ai.nimbletools.mcp/v1": {
      "status": "active",
      "repository": {
        "branch": "main"
      },
      "container": {
        "healthCheck": {
          "path": "/health",
          "port": 8000
        }
      },
      "resources": {
        "limits": {
          "memory": "256Mi",
          "cpu": "100m"
        },
        "requests": {
          "memory": "128Mi",
          "cpu": "50m"
        }
      },
      "deployment": {
        "protocol": "http",
        "port": 8000,
        "mcpPath": "/mcp"
      },
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "display": {
        "category": "data-intelligence",
        "tags": [
          "finance",
          "stocks",
          "market-data",
          "real-time",
          "news",
          "requires-api-key"
        ],
        "documentation": {
          "readmeUrl": "https://raw.githubusercontent.com/NimbleBrainInc/mcp-finnhub/main/README.md"
        }
      }
    }
  }
}
