{
  "$schema": "https://registry.nimbletools.ai/schemas/2025-09-22/nimbletools-server.schema.json",
  "name": "ai.nimbletools/reverse-text",
  "version": "1.0.0",
  "description": "Text manipulation service with reverse and analysis tools for processing and transforming text data",
  "status": "active",
  "repository": {
    "url": "https://github.com/NimbleBrainInc/mcp-reverse-text",
    "source": "github",
    "branch": "main"
  },
  "websiteUrl": "https://github.com/NimbleBrainInc/mcp-reverse-text",
  "packages": [
    {
      "registryType": "oci",
      "registryBaseUrl": "https://docker.io",
      "identifier": "nimbletools/mcp-reverse-text",
      "version": "1.0.0",
      "transport": {
        "type": "streamable-http",
        "url": "https://mcp.nimbletools.ai/mcp"
      }
    }
  ],
  "_meta": {
    "ai.nimbletools.mcp/v1": {
      "container": {
        "healthCheck": {
          "path": "/health",
          "port": 8000
        }
      },
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "resources": {
        "limits": {
          "memory": "256Mi",
          "cpu": "100m"
        },
        "requests": {
          "memory": "128Mi",
          "cpu": "50m"
        }
      },
      "deployment": {
        "protocol": "http",
        "port": 8000,
        "mcpPath": "/mcp"
      },
      "display": {
        "name": "Reverse Text",
        "category": "developer-tools",
        "tags": [
          "text-processing",
          "utilities",
          "transformation"
        ],
        "branding": {
          "logoUrl": "https://static.nimbletools.ai/logos/reverse.png",
          "iconUrl": "https://static.nimbletools.ai/icons/reverse.png"
        },
        "documentation": {
          "readmeUrl": "https://raw.githubusercontent.com/NimbleBrainInc/mcp-reverse-text/main/README.md"
        }
      }
    }
  }
}