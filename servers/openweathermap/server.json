{
  "$schema": "https://registry.nimbletools.ai/schemas/2025-12-11/nimbletools-server.schema.json",
  "name": "ai.nimbletools/openweathermap",
  "version": "1.0.0",
  "title": "OpenWeather",
  "description": "OpenWeatherMap API: weather forecasts, solar radiation, air quality, and UV index data",
  "icons": [
    {
      "src": "https://static.nimbletools.ai/icons/openweathermap.png",
      "sizes": [
        "64x64"
      ]
    },
    {
      "src": "https://static.nimbletools.ai/logos/openweathermap.png",
      "sizes": [
        "256x256"
      ]
    }
  ],
  "repository": {
    "url": "https://github.com/NimbleBrainInc/mcp-openweathermap",
    "source": "github"
  },
  "websiteUrl": "https://openweathermap.org/",
  "packages": [
    {
      "registryType": "oci",
      "registryBaseUrl": "https://docker.io",
      "identifier": "nimbletools/mcp-openweathermap",
      "version": "1.0.1",
      "transport": {
        "type": "streamable-http",
        "url": "https://mcp.nimbletools.ai/mcp"
      },
      "environmentVariables": [
        {
          "name": "OPENWEATHERMAP_API_KEY",
          "description": "OpenWeatherMap API key (get from https://openweathermap.org/api)",
          "isRequired": true,
          "isSecret": true,
          "placeholder": "your_openweathermap_api_key_here"
        }
      ]
    }
  ],
  "_meta": {
    "ai.nimbletools.mcp/v1": {
      "status": "active",
      "repository": {
        "branch": "main"
      },
      "container": {
        "healthCheck": {
          "path": "/health",
          "port": 8000
        }
      },
      "resources": {
        "limits": {
          "memory": "256Mi",
          "cpu": "250m"
        },
        "requests": {
          "memory": "128Mi",
          "cpu": "100m"
        }
      },
      "deployment": {
        "protocol": "http",
        "port": 8000,
        "mcpPath": "/mcp"
      },
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "display": {
        "category": "data-intelligence",
        "tags": [
          "weather",
          "forecast",
          "solar-radiation",
          "climate",
          "temperature",
          "air-quality",
          "uv-index",
          "meteorology"
        ],
        "documentation": {
          "readmeUrl": "https://raw.githubusercontent.com/NimbleBrainInc/mcp-openweathermap/main/README.md"
        }
      }
    }
  }
}
