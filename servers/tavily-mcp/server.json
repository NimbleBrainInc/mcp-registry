{
  "$schema": "https://registry.nimbletools.ai/schemas/2025-12-11/nimbletools-server.schema.json",
  "name": "io.tavily/mcp",
  "version": "2.14.1",
  "title": "Tavily",
  "description": "Real-time web search, extract, map and crawl capabilities for web intelligence",
  "icons": [
    {
      "src": "https://static.nimbletools.ai/icons/tavily.png",
      "sizes": ["64x64"]
    },
    {
      "src": "https://static.nimbletools.ai/logos/tavily.png",
      "sizes": ["256x256"]
    }
  ],
  "repository": {
    "url": "https://github.com/tavily-ai/tavily-mcp",
    "source": "github"
  },
  "websiteUrl": "https://tavily.com",
  "remotes": [
    {
      "type": "sse",
      "url": "https://mcp.tavily.com/mcp",
      "description": "Hosted Tavily MCP server for web search and intelligence",
      "headers": [
        {
          "name": "Authorization",
          "value": "Bearer {TAVILY_API_KEY}"
        }
      ],
      "variables": {
        "TAVILY_API_KEY": {
          "description": "Tavily API key (get free key at tavily.com)",
          "isRequired": true,
          "isSecret": true
        }
      }
    }
  ],
  "_meta": {
    "ai.nimbletools.mcp/v1": {
      "serverType": "remote",
      "status": "active",
      "capabilities": {
        "tools": true,
        "resources": true,
        "prompts": true
      },
      "display": {
        "category": "data-intelligence",
        "tags": [
          "search",
          "web-scraping",
          "extraction",
          "crawling",
          "real-time",
          "requires-api-key"
        ],
        "documentation": {
          "readmeUrl": "https://raw.githubusercontent.com/tavily-ai/tavily-mcp/main/README.md"
        }
      }
    }
  }
}
