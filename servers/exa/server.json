{
  "$schema": "https://registry.nimbletools.ai/schemas/2025-12-11/nimbletools-server.schema.json",
  "name": "io.exa/mcp",
  "version": "3.1.3",
  "title": "Exa Search",
  "description": "AI-native web search with semantic understanding, code context, and deep research",
  "icons": [
    {
      "src": "https://exa.ai/favicon.ico",
      "sizes": ["32x32"]
    }
  ],
  "repository": {
    "url": "https://github.com/exa-labs/exa-mcp-server",
    "source": "github"
  },
  "websiteUrl": "https://exa.ai",
  "remotes": [
    {
      "type": "sse",
      "url": "https://mcp.exa.ai/mcp",
      "description": "Hosted Exa MCP server with web search and crawling capabilities",
      "headers": [
        {
          "name": "Authorization",
          "value": "Bearer {EXA_API_KEY}"
        }
      ],
      "variables": {
        "EXA_API_KEY": {
          "description": "Exa API key (get at dashboard.exa.ai/api-keys)",
          "isRequired": true,
          "isSecret": true
        }
      }
    }
  ],
  "_meta": {
    "ai.nimbletools.mcp/v1": {
      "serverType": "remote",
      "status": "active",
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "display": {
        "category": "data-intelligence",
        "tags": [
          "search",
          "web-crawling",
          "research",
          "semantic-search",
          "requires-api-key"
        ]
      }
    }
  }
}
