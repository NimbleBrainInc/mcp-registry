{
  "$schema": "https://registry.nimbletools.ai/schemas/2025-12-11/nimbletools-server.schema.json",
  "name": "ai.nimbletools/ipinfo",
  "version": "0.2.0",
  "title": "IPInfo",
  "description": "IP geolocation, network intelligence, ASN lookup, privacy detection, and WHOIS queries",
  "icons": [
    {
      "src": "https://static.nimbletools.ai/icons/ipinfo.png",
      "sizes": [
        "64x64"
      ]
    },
    {
      "src": "https://static.nimbletools.ai/logos/ipinfo.png",
      "sizes": [
        "256x256"
      ]
    }
  ],
  "repository": {
    "url": "https://github.com/NimbleBrainInc/mcp-ipinfo",
    "source": "github"
  },
  "websiteUrl": "https://ipinfo.io/",
  "packages": [
    {
      "registryType": "oci",
      "registryBaseUrl": "https://docker.io",
      "identifier": "nimbletools/mcp-ipinfo",
      "version": "0.2.0",
      "transport": {
        "type": "streamable-http",
        "url": "https://mcp.nimbletools.ai/mcp"
      },
      "environmentVariables": [
        {
          "name": "IPINFO_API_TOKEN",
          "description": "IPInfo API token for accessing geolocation services (get free token at ipinfo.io)",
          "isRequired": false,
          "isSecret": true,
          "placeholder": "your_ipinfo_token_here"
        }
      ]
    }
  ],
  "_meta": {
    "ai.nimbletools.mcp/v1": {
      "status": "active",
      "repository": {
        "branch": "main"
      },
      "container": {
        "healthCheck": {
          "path": "/health",
          "port": 8000
        }
      },
      "resources": {
        "limits": {
          "memory": "256Mi",
          "cpu": "100m"
        },
        "requests": {
          "memory": "128Mi",
          "cpu": "50m"
        }
      },
      "deployment": {
        "protocol": "http",
        "port": 8000,
        "mcpPath": "/mcp"
      },
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "display": {
        "category": "data-intelligence",
        "tags": [
          "geolocation",
          "network",
          "ip-lookup",
          "privacy",
          "whois",
          "requires-api-key",
          "free-tier"
        ],
        "documentation": {
          "readmeUrl": "https://raw.githubusercontent.com/NimbleBrainInc/mcp-ipinfo/main/README.md"
        }
      }
    }
  }
}
