{
  "$schema": "https://registry.nimbletools.ai/schemas/2025-09-22/nimbletools-server.schema.json",
  "name": "ai.nimbletools/ipinfo",
  "version": "0.2.0",
  "description": "IP geolocation, network intelligence, ASN lookup, privacy detection, and WHOIS queries",
  "status": "active",
  "repository": {
    "url": "https://github.com/NimbleBrainInc/mcp-ipinfo",
    "source": "github",
    "branch": "main"
  },
  "websiteUrl": "https://github.com/NimbleBrainInc/mcp-ipinfo",
  "packages": [
    {
      "registryType": "oci",
      "registryBaseUrl": "https://docker.io",
      "identifier": "nimbletools/mcp-ipinfo",
      "version": "0.2.0",
      "transport": {
        "type": "streamable-http",
        "url": "https://mcp.nimbletools.ai/mcp"
      },
      "environmentVariables": [
        {
          "name": "IPINFO_API_TOKEN",
          "description": "IPInfo API token for accessing geolocation services (get free token at ipinfo.io)",
          "isRequired": false,
          "isSecret": true,
          "example": "your_ipinfo_token_here"
        }
      ]
    }
  ],
  "_meta": {
    "ai.nimbletools.mcp/v1": {
      "container": {
        "healthCheck": {
          "path": "/health",
          "port": 8000
        }
      },
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "resources": {
        "limits": {
          "memory": "256Mi",
          "cpu": "100m"
        },
        "requests": {
          "memory": "128Mi",
          "cpu": "50m"
        }
      },
      "deployment": {
        "protocol": "http",
        "port": 8000,
        "mcpPath": "/mcp"
      },
      "display": {
        "name": "IPInfo",
        "documentation": {
          "readmeUrl": "https://raw.githubusercontent.com/NimbleBrainInc/mcp-ipinfo/main/README.md"
        },
        "branding": {
          "iconUrl": "https://ipinfo.io/static/images/favicon.ico"
        }
      }
    }
  }
}