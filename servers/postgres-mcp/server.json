{
  "$schema": "https://registry.nimbletools.ai/schemas/2025-09-22/nimbletools-server.schema.json",
  "name": "crystaldba/postgres-mcp",
  "version": "1.0.0",
  "description": "PostgreSQL MCP server providing configurable read/write access and performance analysis for database optimization",
  "status": "active",
  "repository": {
    "url": "https://github.com/crystaldba/postgres-mcp",
    "source": "github",
    "branch": "main"
  },
  "websiteUrl": "https://github.com/crystaldba/postgres-mcp",
  "packages": [
    {
      "registryType": "oci",
      "registryBaseUrl": "https://ghcr.io",
      "identifier": "crystaldba/postgres-mcp",
      "version": "latest",
      "transport": {
        "type": "streamable-http",
        "url": "https://mcp.nimbletools.ai/mcp"
      },
      "environment": [
        {
          "name": "DATABASE_URI",
          "description": "PostgreSQL connection string (e.g., postgresql://username:password@localhost:5432/dbname)",
          "required": true
        }
      ]
    }
  ],
  "_meta": {
    "ai.nimbletools.mcp/v1": {
      "container": {
        "healthCheck": {
          "path": "/health",
          "port": 8000
        }
      },
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "resources": {
        "limits": {
          "memory": "512Mi",
          "cpu": "200m"
        },
        "requests": {
          "memory": "256Mi",
          "cpu": "100m"
        }
      },
      "deployment": {
        "protocol": "http",
        "port": 8000,
        "mcpPath": "/mcp"
      },
      "registry": {
        "documentation": {
          "readmeUrl": "https://raw.githubusercontent.com/crystaldba/postgres-mcp/main/README.md"
        }
      }
    }
  }
}