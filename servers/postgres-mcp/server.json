{
  "$schema": "https://registry.nimbletools.ai/schemas/2025-09-22/nimbletools-server.schema.json",
  "name": "ai.crystaldba/postgres-mcp",
  "version": "0.3.0",
  "description": "PostgreSQL MCP server with configurable read/write access and performance analysis",
  "status": "active",
  "repository": {
    "url": "https://github.com/crystaldba/postgres-mcp",
    "source": "github",
    "branch": "main"
  },
  "websiteUrl": "https://github.com/crystaldba/postgres-mcp",
  "packages": [
    {
      "registryType": "oci",
      "registryBaseUrl": "https://docker.io",
      "identifier": "nimbletools/universal-adapter",
      "version": "dev",
      "transport": {
        "type": "stdio"
      },
      "runtimeHint": "uvx",
      "runtimeArguments": [
        {
          "type": "positional",
          "value": "postgres-mcp"
        },
        {
          "type": "positional",
          "value": "--access-mode=unrestricted"
        }
      ],
      "environmentVariables": [
        {
          "name": "DATABASE_URI",
          "description": "PostgreSQL connection string (e.g., postgresql://username:password@localhost:5432/dbname)",
          "isRequired": true,
          "isSecret": true
        }
      ]
    }
  ],
  "_meta": {
    "ai.nimbletools.mcp/v1": {
      "container": {
        "healthCheck": {
          "enabled": false
        }
      },
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "resources": {
        "limits": {
          "memory": "512Mi",
          "cpu": "500m"
        },
        "requests": {
          "memory": "128Mi",
          "cpu": "50m"
        }
      },
      "deployment": {
        "protocol": "http",
        "port": 8000,
        "mcpPath": "/mcp"
      },
      "display": {
        "name": "PostgreSQL",
        "category": "infrastructure-data",
        "tags": [
          "database",
          "sql",
          "postgres",
          "read-write",
          "performance"
        ],
        "documentation": {
          "readmeUrl": "https://raw.githubusercontent.com/crystaldba/postgres-mcp/main/README.md"
        }
      }
    }
  }
}