{
  "$schema": "https://registry.nimbletools.ai/schemas/2025-12-11/nimbletools-server.schema.json",
  "name": "ai.nimbletools/postgres-mcp",
  "version": "0.3.0",
  "title": "PostgreSQL",
  "description": "PostgreSQL MCP server with configurable read/write access and performance analysis",
  "icons": [
    {
      "src": "https://static.nimbletools.ai/icons/postgresql.png",
      "sizes": [
        "64x64"
      ]
    },
    {
      "src": "https://static.nimbletools.ai/logos/postgresql.png",
      "sizes": [
        "256x256"
      ]
    }
  ],
  "repository": {
    "url": "https://github.com/crystaldba/postgres-mcp",
    "source": "github"
  },
  "websiteUrl": "https://github.com/crystaldba/postgres-mcp",
  "packages": [
    {
      "registryType": "oci",
      "registryBaseUrl": "https://docker.io",
      "identifier": "nimbletools/universal-adapter",
      "version": "dev",
      "transport": {
        "type": "stdio"
      },
      "runtimeHint": "uvx",
      "runtimeArguments": [
        {
          "type": "positional",
          "value": "postgres-mcp"
        },
        {
          "type": "positional",
          "value": "--access-mode=unrestricted"
        }
      ],
      "environmentVariables": [
        {
          "name": "DATABASE_URI",
          "description": "PostgreSQL connection string (e.g., postgresql://username:password@localhost:5432/dbname)",
          "isRequired": true,
          "isSecret": true
        }
      ]
    }
  ],
  "_meta": {
    "ai.nimbletools.mcp/v1": {
      "status": "active",
      "repository": {
        "branch": "main"
      },
      "container": {
        "healthCheck": {
          "enabled": false
        }
      },
      "resources": {
        "limits": {
          "memory": "512Mi",
          "cpu": "500m"
        },
        "requests": {
          "memory": "128Mi",
          "cpu": "50m"
        }
      },
      "deployment": {
        "protocol": "http",
        "port": 8000,
        "mcpPath": "/mcp"
      },
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "display": {
        "category": "infrastructure-data",
        "tags": [
          "database",
          "sql",
          "postgres",
          "read-write",
          "performance"
        ],
        "documentation": {
          "readmeUrl": "https://raw.githubusercontent.com/crystaldba/postgres-mcp/main/README.md"
        }
      }
    }
  }
}
